<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color for the EditText -->
    <solid android:color="@color/colorPrimary" />

    <!-- Corner radius to give the EditText rounded edges -->
    <corners android:radius="8dp" />

    <!-- Border (stroke) around the EditText -->
    <stroke
        android:width="1dp"
        android:color="@color/colorPrimaryDark" />

    <!-- Padding inside the EditText to space the text from the borders -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>

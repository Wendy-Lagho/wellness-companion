<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wcapp">
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Login Activity (Main Launcher) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MediaPlaybackActivity"
            android:exported="true">
        </activity>
        <!-- Home Activity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
        </activity>

        <!-- Mood Tracking Activity -->
        <activity
            android:name=".MoodTrackingActivity"
            android:exported="true">
        </activity>

        <!-- Guided Meditation Activity -->
        <activity
            android:name=".GuidedMeditationActivity"
            android:exported="true">
        </activity>

        <!-- Virtual Therapy Activity -->
        <activity android:name=".VirtualTherapyActivity"
            android:exported="true">
            <!-- Optionally, include intent filters if necessary -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PeerSupportActivity"
            android:exported="true"/>


        <!-- Educational Resources Activity -->
        <activity
            android:name=".EducationalResourcesActivity"
            android:exported="true">
        </activity>
        <activity android:name=".CallActivity" />
        <activity android:name=".ChatActivity" />
        <!-- Add Contact Activity -->
        <activity
            android:name=".AddContactActivity"
            android:exported="true">
        </activity>

        <!-- Additional components or services can be declared here -->

    </application>

</manifest>
